<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:layout_marginEnd="@dimen/_8sdp"
            android:elevation="8dp"
            app:cardCornerRadius="@dimen/_4sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:id="@+id/rlImages"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/dp_10">


                    <ImageView
                        android:id="@+id/businessImage"
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_55sdp"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_placeholder" />

                    <ImageView
                        android:id="@+id/icMenu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_menu" />

                    <com.dfa.customviews.CustomTextViewheading
                        android:id="@+id/businessName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_toLeftOf="@+id/icMenu"
                        android:layout_toRightOf="@+id/businessImage"
                        android:text="Business Name"
                        android:textColor="@color/black"
                        android:textSize="@dimen/dp_18" />

                    <com.dfa.customviews.CustomTextViewheading
                        android:id="@+id/categoriesName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/businessName"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_toRightOf="@+id/businessImage"
                        android:text="Categories"
                        android:textSize="@dimen/dp_14" />

                    <com.dfa.customviews.CustomTextViewheading
                        android:id="@+id/categoriesId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/businessName"
                        android:layout_marginTop="@dimen/dp_5"
                        android:layout_toRightOf="@+id/categoriesName"
                        android:textColor="@color/silver"
                        android:textSize="@dimen/dp_14" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/categoriesName"
                        android:layout_marginLeft="@dimen/dp_15"
                        android:layout_marginTop="@dimen/dp_15"
                        android:layout_toRightOf="@+id/businessImage">

                        <com.dfa.customviews.CustomTextViewheading
                            android:id="@+id/location"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:layout_gravity="center_vertical"
                            android:background="@drawable/shape_round_corner_green"
                            android:drawableStart="@drawable/ic_location"
                            android:drawablePadding="@dimen/_2sdp"
                            android:drawableTint="@color/green"
                            android:gravity="center_vertical"
                            android:paddingStart="@dimen/_4ssp"
                            android:paddingTop="@dimen/_4ssp"
                            android:paddingEnd="@dimen/_4ssp"
                            android:paddingBottom="@dimen/_4ssp"
                            android:text="location"
                            android:textAllCaps="true"
                            android:textColor="@color/green"
                            android:textSize="@dimen/sp_14"
                            android:textStyle="bold"
                            android:visibility="visible"
                            tools:targetApi="m" />

                        <Button
                            android:id="@+id/btnCall"
                            android:layout_width="wrap_content"
                            android:layout_height="@dimen/dp_30"
                            android:layout_centerVertical="true"
                            android:layout_marginLeft="30dp"
                            android:layout_toRightOf="@+id/location"
                            android:background="@drawable/button_green_bg"
                            android:text="call"
                            android:textColor="@color/white" />

                    </RelativeLayout>


                </RelativeLayout>

                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_below="@+id/rlImages"
                    android:background="@color/silver" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/view"
                    android:orientation="vertical"
                    android:padding="@dimen/dp_10">


                    <RelativeLayout
                        android:id="@+id/small_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/expandable_textsss"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="5dp"
                            android:ellipsize="end"
                            android:ems="3"
                            android:maxLines="2"
                            android:padding="@dimen/dp_5"
                            android:text="f dfafas fda fd gdjfdjhjfghkjgkgjhkgfhjgfksdf"
                            android:textColor="#666666" />

                        <TextView
                            android:id="@+id/tvViewMode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignRight="@+id/expandable_textsss"
                            android:layout_alignBottom="@+id/expandable_textsss"
                            android:layout_marginRight="2dp"
                            android:background="@color/white"
                            android:drawableLeft="@drawable/ic_down_arrow"
                            android:text="More"
                            android:textColor="@color/green" />

                        <TextView
                            android:id="@+id/tvDot"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignBottom="@+id/expandable_textsss"
                            android:layout_toLeftOf="@+id/tvViewMode"
                            android:background="@color/white"
                            android:padding="@dimen/dp_3"
                            android:text="..."
                            android:textColor="@color/green"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:id="@+id/full_view"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone">

                        <TextView
                            android:id="@+id/expandable_less"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:text="fsdfsdfsdf"
                            android:textColor="#666666"
                            android:textSize="16sp" />

                        <TextView
                            android:id="@+id/tvViewLess"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/expandable_less"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"

                            android:layout_marginRight="@dimen/dp_10"
                            android:drawableLeft="@drawable/ic_arrow_less"
                            android:paddingRight="5dp"
                            android:text="Less"
                            android:textColor="@color/green" />

                    </RelativeLayout>


                </RelativeLayout>
            </RelativeLayout>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>
</layout>
