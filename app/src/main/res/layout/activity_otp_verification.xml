<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/OtpVerificationLayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            android:id="@+id/toolbarLayout"
            layout="@layout/toolbar_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/silver" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:orientation="vertical">

         <com.ngo.customviews.CustomTextViewheading
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:gravity="center"
                android:text="@string/please_enter_confirmation_code"
                android:textColor="@color/black"
                android:textSize="@dimen/_16ssp"
               />

            <com.ngo.customviews.CustomEditText
                android:id="@+id/et_otp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/squarebg"
                android:ems="10"
                android:gravity="start"
                android:hint="@string/enter_verification_code"
                android:imeOptions="actionDone"
                android:inputType="number"
                android:maxLength="500"
                android:maxLines="1"
                android:minLines="1"
                android:padding="@dimen/_10sdp" />

            <com.ngo.customviews.CustomTextViewheading
                android:id="@+id/btnOtpSubmit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/button_green_bg"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="SUBMIT"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp" />

            <com.ngo.customviews.CustomTextViewheading
                android:id="@+id/btnOtpResend"
                android:layout_height="wrap_content"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@drawable/button_red_bg"
                android:gravity="center"
                android:padding="@dimen/_12sdp"
                android:text="RESEND"
                android:textColor="@color/white"
                android:textSize="@dimen/_12ssp"/>

        </LinearLayout>
    </LinearLayout>
</layout>