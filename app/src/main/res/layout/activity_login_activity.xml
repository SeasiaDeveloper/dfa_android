<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/loginlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical">

        <!--  <include
              android:id="@+id/toolbarLayout"
              layout="@layout/toolbar_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content" />-->

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:paddingBottom="@dimen/_20sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_marginEnd="@dimen/_5sdp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:src="@drawable/layer"></ImageView>

                <com.dfa.customviews.CustomtextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="center"
                    android:text="@string/please_login_to_your_account"
                    android:textColor="@color/grey"
                    android:textSize="@dimen/_12ssp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <com.dfa.customviews.CustomEditText
                        android:id="@+id/email_mobile_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/squarebg"
                        android:ems="10"
                        android:gravity="start"
                        android:hint="@string/email_mobile_hint"
                        android:imeOptions="actionDone"
                        android:inputType="phone"
                        android:maxLength="500"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/_12sdp"
                        android:textColorHint="@color/grey"
                        android:textSize="@dimen/_12ssp" />


                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-60dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/phone" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:orientation="horizontal">

                    <com.dfa.customviews.CustomEditText
                        android:id="@+id/editPassword"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/squarebg"
                        android:ems="10"
                        android:gravity="start"
                        android:hint="@string/password"
                        android:imeOptions="actionDone"
                        android:inputType="textPassword"
                        android:textSize="@dimen/_12ssp"
                        android:maxLength="500"
                        android:maxLines="1"
                        android:minLines="1"
                        android:padding="@dimen/_10sdp"
                        android:textColorHint="@color/grey" />

                    <ImageButton
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="-60dp"
                        android:backgroundTint="@color/white"
                        android:src="@drawable/pass_icon" />

                </LinearLayout>

                <com.dfa.customviews.CustomtextView
                    android:id="@+id/forgot_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_20sdp"
                    android:gravity="end"
                    android:text="@string/forgot_password"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12ssp" />

                <com.dfa.customviews.CustomTextViewheading
                    android:id="@+id/btnLogin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/button_green_bg"
                    android:gravity="center"
                    android:textSize="@dimen/_12ssp"
                    android:paddingStart="@dimen/_15ssp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15ssp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="LOGIN"
                    android:textColor="@color/white" />

                <com.dfa.customviews.CustomtextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:text="@string/dont_have_an_account_yet"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp" />

                <com.dfa.customviews.CustomTextViewheading
                    android:id="@+id/btnSignUp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/button_green_bg"
                    android:gravity="center"
                    android:paddingStart="@dimen/_15ssp"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingEnd="@dimen/_15ssp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_12ssp"
                    android:text="REGISTER AS NEW USER"
                    android:textColor="@color/white" />

                <com.dfa.customviews.CustomTextViewheading
                    android:id="@+id/btnGuestUser"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginEnd="@dimen/_12sdp"
                    android:background="@drawable/gray_background"
                    android:gravity="center"
                    android:paddingStart="@dimen/_15ssp"
                    android:paddingTop="@dimen/_10sdp"
                    app:textAllCaps="false"
                    android:paddingEnd="@dimen/_15ssp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:text="@string/use_app_without_registration"
                    android:textSize="@dimen/_12ssp"
                    android:textColor="@color/white" />

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</layout>