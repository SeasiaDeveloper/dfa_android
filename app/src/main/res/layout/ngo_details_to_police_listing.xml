<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools">
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:layout_marginEnd="@dimen/_8sdp"
    android:layout_marginBottom="@dimen/_4sdp"
    app:cardCornerRadius="@dimen/_8sdp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <LinearLayout
        android:id="@+id/layoutListItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_5sdp"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_6sdp"
            android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/imgCrime"
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:layout_gravity="center"
                android:padding="4dp"
                android:visibility="gone"
                android:src="@drawable/noimage" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/username"
                        app:font="@{`semibold`}"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvUsername"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        app:font="@{`regular`}"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/crime"
                        app:font="@{`semibold`}"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvCrime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        app:font="@{`regular`}"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textColor="@color/black" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/status"
                        app:font="@{`semibold`}"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:textStyle="bold"
                        android:textColor="@color/black" />
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textAllCaps="true"
                        app:font="@{`regular`}"
                        android:textSize="@dimen/_12ssp"
                        android:layout_marginTop="@dimen/_3sdp"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:textColor="@color/black" />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:id="@+id/tvUrgency"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:text="Urgency:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:font="@{`semibold`}"/>
                    <TextView
                        android:id="@+id/expandable_Level"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/black"
                        app:font="@{`bold`}"
                        android:textSize="@dimen/_12ssp"
                        tools:text=""/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_6sdp"
                        android:text="Reported:"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        app:font="@{`semibold`}"/>
                    <TextView
                        android:id="@+id/expandable_Date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/_4sdp"
                        android:layout_marginEnd="@dimen/_4sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:textColor="@color/black"
                        app:font="@{`regular`}"
                        android:textSize="@dimen/_12ssp"
                        tools:text=""/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_gravity="end"
                        android:gravity="end"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/imgExpand"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:padding="@dimen/_6sdp"
                            android:src="@drawable/ic_expand_more_black_24dp"/>

                    </LinearLayout>
                </LinearLayout>



                <LinearLayout
                    android:id="@+id/expandableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_6sdp"
                            android:text="Report Description:"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            app:font="@{`semibold`}"/>
                        <TextView
                            android:id="@+id/expandable_DescriptionNgo"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_7sdp"
                            android:layout_marginEnd="@dimen/_4sdp"
                            android:layout_marginBottom="@dimen/_5sdp"
                            android:textColor="@color/black"
                            app:font="@{`regular`}"
                            android:textSize="@dimen/_10ssp"
                            tools:text=""/>
                    </LinearLayout>


                    <ImageView
                        android:id="@+id/imgPhoto"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_250sdp"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:scaleType="fitXY"
                        android:src="@drawable/noimage"

                      />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvMarkStatus"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:layout_height="match_parent"
                        android:text="Change Status"
                        android:textSize="@dimen/_10ssp"
                        android:gravity="center"
                        android:background="@drawable/button_red_bg"
                        android:padding="@dimen/_7sdp"
                        app:font="@{`regular`}"
                        android:textColor="@color/white" />

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvLocation"
                        android:layout_width="0dp"
                        android:layout_weight=".5"
                        android:gravity="center"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:paddingTop="@dimen/_7sdp"
                        android:paddingBottom="@dimen/_2sdp"
                        android:paddingStart="@dimen/_7sdp"
                        android:textSize="@dimen/_9ssp"
                        android:drawableLeft="@drawable/ic_location"
                        android:drawableTint="@color/colorPrimary"
                        app:font="@{`regular`}"
                        android:background="@drawable/green_bordered_button"
                        android:layout_marginStart="@dimen/_8sdp"
                        android:textColor="@color/blue" />
                </LinearLayout>

                <androidx.appcompat.widget.AppCompatTextView
                    android:id="@+id/tvViewPhoto"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_height="match_parent"
                    android:text="View Photo"
                    android:textSize="@dimen/_10ssp"
                    android:gravity="center"
                    android:background="@drawable/green_bordered_button"
                    android:padding="@dimen/_7sdp"
                    app:font="@{`semibold`}"
                    android:textColor="@color/colorPrimary" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
</layout>
