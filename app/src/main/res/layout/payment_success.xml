<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:layout_height="300dp">


    <cdflynn.android.library.checkview.CheckView
        android:id="@+id/check1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="@dimen/dp_20"
        android:layout_centerHorizontal="true"
        app:checkView_strokeColor="@color/green"
        app:checkView_strokeWidth="5dp"/>

    <com.dfa.customviews.CustomtextView
        android:id="@+id/tvPayment"
        android:text="â‚¹ 1000"
        android:textColor="@color/black"
        android:textSize="@dimen/dp_20"
        android:textStyle="bold"
        android:layout_marginTop="@dimen/dp_25"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/check1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <com.dfa.customviews.CustomtextView
        android:id="@+id/payment"
        android:text="Payment Successful!"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/tvPayment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button

        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_marginTop="@dimen/dp_10"
        android:background="#7ea77e"
        android:elevation="5dp"
        android:layout_alignParentBottom="true"
        android:text="Done"
        android:textColor="@color/white" />

</RelativeLayout>