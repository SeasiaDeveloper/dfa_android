<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/ngoDetailLayout">
    <include
        android:id="@+id/toolbarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/toolbar_layout"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvUSerName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="User Name:"
                app:font="@{`semibold`}"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etUserName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:ems="10"
                app:font="@{`regular`}"

                android:background="@null"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lines="1"
                android:editable="false"
                android:focusable="false"
                android:padding="@dimen/_3sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvEmail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="Email:"
                app:font="@{`semibold`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                android:textStyle="bold" />

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@null"
                android:ems="10"
                app:font="@{`regular`}"

                android:editable="false"
                android:focusable="false"
                android:imeOptions="actionNext"
                android:inputType="textPersonName"
                android:lines="1"
                android:padding="@dimen/_3sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvContact"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="Contact No:"
                app:font="@{`semibold`}"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etContactNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@null"
                android:ems="10"
                app:font="@{`regular`}"

                android:imeOptions="actionNext"
                android:maxLength="10"
                android:editable="false"
                android:focusable="false"
                android:inputType="number"
                android:lines="1"
                android:padding="@dimen/_3sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvTypesOfCrime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_6sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="Crime Type:"
                android:textColor="@color/black"
                android:textStyle="bold"
                app:font="@{`semibold`}"
                android:textSize="@dimen/_13ssp"/>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/spTypesOfCrime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:padding="@dimen/_3sdp"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"
                app:font="@{`regular`}"

                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@null" />
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvLevel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="Urgency Level:"
                android:textStyle="bold"
                app:font="@{`semibold`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"/>

            <com.jaygoo.widget.RangeSeekBar
                android:id="@+id/sb_steps_5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:rsb_gravity="bottom"
                app:rsb_mode="single"
                android:layout_marginTop="@dimen/_10sdp"
                app:rsb_progress_color="@color/blue"
                app:rsb_step_auto_bonding="true"
                app:rsb_step_color="@color/blue"
                app:rsb_step_height="15dp"
                app:rsb_step_radius="4dp"
                app:rsb_step_width="10dp"
                android:scrollIndicators="none"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                app:rsb_steps="9"
                app:rsb_thumb_drawable="@drawable/thumb_stroke"
                app:rsb_tick_mark_layout_gravity="top"
                app:rsb_tick_mark_mode="other"
                app:rsb_tick_mark_text_array="@array/levelArray"
                app:rsb_tick_mark_text_margin="20dp" />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/imgView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    android:layout_marginStart="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_6sdp"
                    android:layout_marginEnd="@dimen/_7sdp"/>

            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvDescription"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_7sdp"
                android:text="Description:"
                android:textStyle="bold"
                app:font="@{`semibold`}"
                android:textColor="@color/black"
                android:textSize="@dimen/_13ssp"/>

            <androidx.appcompat.widget.AppCompatEditText
                android:id="@+id/etDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_9sdp"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginEnd="@dimen/_12sdp"
                android:background="@null"
                android:ems="10"
                android:imeOptions="actionDone"
                android:maxLength="500"
                android:inputType="textMultiLine"
                android:gravity="start"
                app:font="@{`regular`}"
                android:editable="false"
                android:focusable="false"
                android:layout_marginBottom="@dimen/_8sdp"
                android:padding="@dimen/_3sdp"/>

        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>